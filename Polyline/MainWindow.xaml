        <Label x:Name="label_Copy4" Content="Номер слагаемого для остатка" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_j_to_skip" HorizontalAlignment="Left" Height="23" Margin="10,187,0,0" TextWrapping="Wrap" Text="-1" VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="txt_DFT_N" HorizontalAlignment="Left" Height="23" Margin="261,72,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="label_Copy5" Content="N for DFT =" HorizontalAlignment="Left" Margin="188,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_DFT_n" HorizontalAlignment="Left" Height="23" Margin="261,104,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="label_Copy6" Content="n for DFT =" HorizontalAlignment="Left" Margin="188,100,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
